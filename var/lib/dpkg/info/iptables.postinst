#!/bin/sh -e

if [ "$1" = configure ]; then
   if command -v install-docs >/dev/null 2>&1; then
      install-docs -i /usr/share/doc-base/nat
      install-docs -i /usr/share/doc-base/packet-filter
   fi
fi
# symlink management generated by debstd
if [ "$1" = "configure" ]; then
  if [ -d /usr/doc -a ! -e /usr/doc/iptables -a -d /usr/share/doc/iptables ]; then
    ln -sf ../share/doc/iptables /usr/doc/iptables
  fi
fi
